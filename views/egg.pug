extends layout
block content
    h1= title
    - let items = results;
    div(class="container-fluid")
      div(class="row m-1")
       - let cr = `dispatch(\"/egg/create\")`
       button.btn( class="btn-primary ml-1", onclick= cr) create
       each item in items
        - let destination = `dispatch(\"/egg/update?id=${item._id}\")`
        - let de_tail = `dispatch(\"/egg/detail?id=${item._id}\")`
        - let de_lete = `dispatch(\"/egg/delete?id=${item._id}\")`
        div(class="row-sm-2", class="m-1") Item #{item.egg_name}(#{item.egg_size}) is #{item.egg_cost}
          button.btn( class="btn-primary ml-1", onclick= destination) Update
          button.btn( class="btn-warning ml-1", onclick= de_tail) detail
          button.btn( class="btn-secondary ml-1", onclick= de_lete) delete

        script.
            function dispatch(path){
            window.location.href=path
            }